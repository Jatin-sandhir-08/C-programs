#include <stdio.h>

int main(){
    int r,c;
    printf("Enter Number of Rows:");
    scanf("%d",&r);
    printf("Enter Number of Columns:");
    scanf("%d",&c);
    int a[r][c];
    printf("Enter Matrix:\n");
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            scanf("%d",&a[i][j]);
        }
    }
    for(int i=0;i<r;i++){
        if(i%2==0){ //odd row is printed normally
            for(int j=0;j<c;j++){
                printf("%d ",a[i][j]);
            }
        } else{ //even row is printed oin reverse order
            for(int j=c-1;j>=0;j--){
                printf("%d ",a[i][j]);
            }
        }
    }
    return 0;
}
