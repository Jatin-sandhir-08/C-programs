#include <stdio.h>

void swap(int *x,int *y){
    int temp = *x;
    *x=*y;
    *y=temp;
}

int main(){
    int n;
    printf("Enter Order of Matrix:");
    scanf("%d",&n);
    int a[n][n];
    printf("Enter Elements:");
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            scanf("%d",&a[i][j]);
        }
    }
    printf("Original Matrix:\n");
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }
    for(int i=0;i<n;i++){
        for(int j=i+1;j<n;j++){
            swap(&a[i][j],&a[j][i]);
        }
    }
    for(int i=0;i<n;i++){
        for(int j=0;j<n/2;j++){
            swap(&a[i][j],&a[i][n-1-j]);
        }
    }
    printf("\nRotated Matrix:\n");
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }

    return 0;
}
