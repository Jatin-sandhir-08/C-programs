#include <stdio.h>

int main(){
    int r1,c1,r2,c2;
    printf("Enter Number of Rows of First Matrix:");
    scanf("%d",&r1);
    printf("Enter Number of Columns of First Matrix:");
    scanf("%d",&c1);
    printf("Enter Number of Rows of Second Matrix:");
    scanf("%d",&r2);
    printf("Enter Number of Columns of Second Matrix:");
    scanf("%d",&c2);
    if(c1 != r2){//because c1=r2 is necessary condition for multiplication of 2 matrices
        printf("These can't be multiplied!\n");
        return 0;
    }

    int a[r1][c1], b[r2][c2], c[r1][c2];
    printf("Enter First Matrix:\n");
    for(int i=0;i<r1;i++){
        for(int j=0;j<c1;j++){
            scanf("%d",&a[i][j]);
        }
    }
    printf("Enter Second Matrix:\n");
    for(int i=0;i<r2;i++){
        for(int j=0;j<c2;j++){
            scanf("%d",&b[i][j]);
        }
    }

    for(int i=0;i<r1;i++){
        for(int j=0;j<c2;j++){
            int temp=0;
            for(int k=0;k<c1;k++){
                temp += a[i][k]*b[k][j];
            }
            c[i][j]=temp;
        }
    }

    printf("Multiplication of the matrices:\n");
    for(int i=0;i<r1;i++){
        for(int j=0;j<c2;j++){
            printf("%d ",c[i][j]);
        }
        printf("\n");
    }
    return 0;
}
